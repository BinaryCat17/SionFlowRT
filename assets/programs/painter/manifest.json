{
  "window": {
    "title": "SionFlow Painter",
    "width": 1280,
    "height": 720
  },
  "parameters": {
    "WIDTH": "window.width",
    "HEIGHT": "window.height"
  },
  "type_mapping": {
    "float": "F32",
    "int": "I32"
  },
  "sources": {
    "scr_uv": { "type": "ScreenUV", "shape": ["HEIGHT", "WIDTH", 2] },
    "mouse_cur": { "type": "MousePosition", "shape": [2] },
    "mouse_old": { "type": "MousePositionPrev", "shape": [2] },
    "is_drawing": { "type": "MouseButton", "shape": [1] },
    "display": { "type": "Display", "shape": ["HEIGHT", "WIDTH", 4] }
  },
  "programs": [
    { "id": "brush", "path": "assets/programs/painter/brush.json" },
    { "id": "canvas", "path": "assets/programs/painter/canvas.json" }
  ],
  "links": [
    ["sources.scr_uv", "brush.uv"],
    ["sources.mouse_cur", "brush.mouse_raw"],
    ["sources.mouse_old", "brush.mouse_prev_raw"],
    ["sources.is_drawing", "brush.is_drawing"],
    
    ["brush.output_node", "canvas.brush_input"],
    ["sources.display", "canvas.display"],
    ["canvas.display", "sources.display"]
  ]
}