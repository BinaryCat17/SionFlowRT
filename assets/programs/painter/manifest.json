{
  "window": {
    "title": "SionFlow Painter",
    "width": 1280,
    "height": 720
  },
  "parameters": {
    "WIDTH": 1280,
    "HEIGHT": 720
  },
  "programs": [
    { "id": "brush", "path": "assets/programs/painter/brush.json" },
    { "id": "canvas", "path": "assets/programs/painter/canvas.json" }
  ],
  "mappings": [
    { 
      "program": "brush", "tensor": "uv", 
      "source": { "type": "ScreenUV" }, 
      "shape": ["HEIGHT", "WIDTH", 2] 
    },
    { 
      "program": "brush", "tensor": "mouse", 
      "source": { "type": "MousePosition" }, 
      "shape": [2] 
    },
    { 
      "program": "brush", "tensor": "is_drawing", 
      "source": { "type": "MouseButton", "button": "left" }, 
      "shape": [1] 
    },
    { 
      "program": "brush", "tensor": "time", 
      "source": { "type": "Time" }, 
      "shape": [1] 
    },
    { 
      "program": "canvas", "tensor": "brush_input", 
      "source": { "type": "Link", "program": "brush", "output": "output_node" } 
    },
    { 
      "program": "canvas", "tensor": "prev_frame", 
      "source": { "type": "Link", "program": "canvas", "output": "final_output" } 
    },
    { 
      "program": "canvas", "tensor": "final_output", 
      "source": { "type": "Display" },
      "shape": ["HEIGHT", "WIDTH", 4]
    }
  ]
}
